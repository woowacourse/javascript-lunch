{
  "env": {
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "lines-between-class-members": ["warn", "always", { "exceptAfterSingleLine": true }],
    "functional/no-let": "error",
    "max-depth": ["error", 1],
    "max-params": ["error", 2],
    "max-lines-per-function": ["error", 10]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": ["airbnb", "eslint:recommended", "prettier"],
  "plugins": ["simple-import-sort"]
}
